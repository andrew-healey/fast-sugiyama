{
  "name": "sun-hierarchy",
  "version": "0.2.15",
  "description": "A library for hierarchy graph layout based on sugiyama framework",
  "keywords": [
    "hierarchy",
    "graph",
    "layout",
    "sugiyama"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "nyc mocha -r ts-node/register -r tsconfig-paths/register src/test/*.ts",
    "test-single": "nyc mocha -r ts-node/register -r tsconfig-paths/register",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "yarn run build",
    "prepublishOnly": "yarn run test",
    "version": "yarn run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "coverage/",
      "dist/"
    ],
    "all": true
  },
  "author": "sylsaint",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "chai": "^4.2.0",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "ts-node": "^10.8.1",
    "tsc-alias": "^1.6.11",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "js-beautify": "^1.14.11",
    "lodash": "^4.17.21",
    "shift-refactor": "^2.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sylsaint/sun-hierarchy.git"
  }
}
